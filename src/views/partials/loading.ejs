<link rel="stylesheet" href="/styles/loading.css" />

<div class="loadingContainer" >
    <div class="progressbar-container">
        <div class="outer-box">
            <div class="inner-box" id="inner-box">Uploading...</div>
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="200" height="200">
                <defs>
                    <linearGradient id="gradientColor">
                        <stop offset="0%" stop-color="#e91e63" />
                        <stop offset="100%" stop-color="#673ab7" />
                    </linearGradient>
                </defs>
                <circle id="animation" cx="100" cy="100" r="80" stroke-linecap="round" />
            </svg>
        </div>
    </div>    
</div>
<script>
    const $divCharge = document.getElementById("inner-box")
    const $animation = document.getElementById("animation")
    let counter = 1;
    function buttonCheck(seg){
        let = interval = setInterval(() => {
            testing(seg, counter)
        }, `${seg}00`)
    }
    function testing(seg) {
        if (counter === 10) {
            clearInterval(interval)
        }
        $divCharge.textContent = `${counter}0%`
        counter++
        $animation.style.animation = `loading ${seg}s linear forwards`
    }
    (buttonCheck(10))
</script>