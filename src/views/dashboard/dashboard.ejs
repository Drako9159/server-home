<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" type="text/css" href="/styles/dashboard/dashboard.css" />
    <link rel="icon" href="/icons/boton-inicio.png">
</head>
<body>
    <section class="container-dashboard">
        <div class="main">
            <div class="left">
                <div class="user"><%- user %></div>
                <div class="links-desktop">
                    <button id="button-profile" class="link">Profile</button>
                    <button id="button-movies" class="link">Movies</button>
                    <button id="button-files" class="link">Files</button>
                    <a href="/signin" class="extra-links">Cerrar Sesi√≥n</a>
                    <a href="/movies" class="extra-links">Regresar</a>
                </div>
            </div>
            <div id="rightContainer" class="right"> 
                
            </div>
        </div>
    </section>
    <script>
        const btnProfile = document.querySelector("#button-profile")
        const btnMovies = document.querySelector("#button-movies")
        const btnFiles = document.querySelector("#button-files")
        const btnLogout = document.querySelector("#button-logout")
        const btnReturn = document.querySelector("#button-return")
        const rightContainer = document.querySelector("#rightContainer")

        let buttons = [btnFiles, btnMovies, btnProfile]
        let container = [`<%- include("./partial-files"); %>`, `<%- include("./partial-movies"); %>`, `<%- include("./partial-user"); %>`]

        btnProfile.addEventListener("click", (e) => {
            deactiveButtons(buttons.filter((e) => e !== btnProfile))
            btnProfile.classList.toggle("button-active")
            rightContainer.innerHTML = container[2]
        })
        btnMovies.addEventListener("click", (e) => {
            deactiveButtons(buttons.filter((e) => e !== btnMovies))
            btnMovies.classList.toggle("button-active")
            rightContainer.innerHTML = container[1]
        })
        btnFiles.addEventListener("click", (e) => {
            deactiveButtons(buttons.filter((e) => e !== btnFiles))
            btnFiles.classList.toggle("button-active")
            rightContainer.innerHTML = container[0]
            
        })
        function deactiveButtons(buttons) {
            buttons.forEach((e) => { e.classList.remove("button-active") })
           
            
        }

    </script>
</body>

</html>