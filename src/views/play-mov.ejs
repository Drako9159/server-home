<%- include("./partials/head"); %>
  <body>
    <section class="play-mov">
      <div class="play-mov-container">
        <div class="play-mov-header">
          <div>
            <h1><%- sendMovPlay.title %></h1>
            <h2><%- sendMovPlay.year %></h2>
          </div>
        </div>

        <div class="play-mov-body">
          <video
            src="/uploads/movies/<%- sendMovPlay.video %>"
            controls
            class="play-mov-video"
            autoplay
            id="video-play"
          ></video>
        </div>
        <div class="controls-video">
          <% function videoControl(operator){ const video =
          document.getElementById("video-play"); if(operator === "playVideo"){
          video.play(); }else if(operator === "pauseVideo"){ video.pause();
          }else if(operator === "stopVideo"){ video.pause(); video.currentTime =
          0; } } %>
          <img
            src="/icons/play.png"
            onclick="videoControl(`playVideo`)"
            alt="play"
            class="play"
          />
          <img
            src="/icons/pause.png"
            onclick="videoControl(`pauseVideo`)"
            alt="pause"
            class="pause"
          />
          <a href="/movies"
            ><img
              src="/icons/stop.png"
              onclick="videoControl(`stopVideo`)"
              alt="stop"
              class="stop"
          /></a>
        </div>
      </div>
    </section>
    <script>
      function videoControl(operator) {
        const video = document.getElementById("video-play");
        if (operator === "playVideo") {
          video.play();
        } else if (operator === "pauseVideo") {
          video.pause();
        } else if (operator === "stopVideo") {
          video.pause();
          video.currentTime = 0;
        }
      }
    </script>
  </body>
</html>
